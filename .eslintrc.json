{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": ["airbnb-typescript/base"],
  "rules": {
    "class-methods-use-this": "off",
    "@typescript-eslint/no-useless-constructor": "off"
  },
  "ignorePatterns": [
    "*.config.ts",
    "*.config.js"
  ]
}
